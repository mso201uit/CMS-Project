@model List<CMS_Project.Models.User>

<h2>Logg inn</h2>

<form asp-action="Login" method="post" class="login-form">
    <div>
        <input asp-for="UsernameOrEmail" placeholder="Username or Email" class="form-control" />
        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Logg inn</button>
</form>